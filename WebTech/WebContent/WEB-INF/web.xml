    <servlet-name>Signup</servlet-name>
    <servlet-class>controller.Signup</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Signup</servlet-name>
    <url-pattern>/controller/Signup</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>GetMap</servlet-name>
    <servlet-class>controller.GetMap</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>GetMap</servlet-name>
    <url-pattern>/controller/GetMap</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>GetDettagli</servlet-name>
    <servlet-class>controller.GetDettagli</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>GetDettagli</servlet-name>
    <url-pattern>/controller/GetDettagli</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Logout</servlet-name>
    <servlet-class>controller.Logout</servlet-class>
